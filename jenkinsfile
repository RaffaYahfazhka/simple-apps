pipeline {
    agent {
        node {
            label "docker-rafzhka"
        }
    }

    tools {nodejs "nodejs 18.16.0"}

    stages {
        stage('CHECKOUT SCM') {
            steps {
                git branch: 'main', url: 'https://github.com/RaffaYahfazhka/simple-apps.git'
            }
        }

        stage('BUILD MODULE') {
            steps {
                sh '''cd app 
                npm install'''
            }
        }

        stage('UNIT TEST') {
            steps {
                sh '''cd app 
                npm test'''
            }
        }
    }
}